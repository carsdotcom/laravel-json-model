{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "first_name": {
      "oneOf": [{ "type": "string" }, { "type": "null" }]
    },
    "middle_name": {
      "type": "string"
    },
    "last_name": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "mobile_phone": {
      "type": "string",
      "pattern": "^[0-9]{10}$"
    }
  }
}
